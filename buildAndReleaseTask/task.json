{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "b4d11fbc-5ee3-4a40-a101-9eb3f08e0910",
    "name": "ScribeSolutionDeployment",
    "friendlyName": "Scribe Solution Deployment",
    "description": "Deploy Scribe solutions",
    "helpMarkDown": "",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "author": "Tolu Adepoju",
    "version": {
        "Major": 1,
        "Minor": 1,
        "Patch": 4
    },
    "groups": [
        {"name":"scribeCredentialsGroup", "displayName": "Scribe Credentials"},
        {"name":"organizationInfoGroup", "displayName": "Scribe Organization"}
    ],
    "instanceNameFormat": "Scribe Task - Action",
    "inputs": [
        {
            "name": "connectedServiceNameSelector",
            "type": "pickList",
            "label": "Connection type",
            "required": false,
            "properties": {"EditableOptions": "False"},
            "helpMarkDown": "Select the service connection type to use to invoke the REST API.",
            "defaultValue": "connectedServiceName",
            "options": {
                "connectedServiceName": "Generic",
                "connectedServiceNameARM": "Azure Resource Manager"
            }
        },{
            "name": "connectedServiceName",
            "type": "connectedService:Generic",
            "label": "Generic service connection",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Select a generic service connection that should be used to pick the URL and construct authorization header for the http request.",
            "visibleRule": "connectedServiceNameSelector = connectedServiceName"
        },{
            "name": "scribeUsername",
            "type": "string",
            "label": "Scribe Username",
            "defaultValue": "",
            "required": true,
            "groupName": "scribeCredentialsGroup"
        },{
            "name": "scribePassword",
            "type": "string",
            "label": "Scribe Password",
            "defaultValue": "",
            "required": true,
            "groupName": "scribeCredentialsGroup"
        },{
            "name": "scribeOrganizationId",
            "type": "string",
            "label": "Scribe Organization Id",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The scribe organization id",
            "groupName": "organizationInfoGroup"
        },{
            "name": "scribeBaseurl",
            "type": "string",
            "label": "Scribe Base Url",
            "defaultValue": "https://api.scribesoft.com/v1/orgs",
            "required": true,
            "groupName": "organizationInfoGroup"
        },{
            "name": "connectionId",
            "type": "string",
            "label": "Connection Id",
            "defaultValue": "",
            "required": false
        },{
            "name": "agentId",
            "type": "string",
            "label": "Agent Id",
            "defaultValue": "",
            "required": false
        },{
            "name": "sourceConnectionName",
            "type": "string",
            "label": "Source Connection Name",
            "defaultValue": "",
            "required": false
        },{
            "name": "targetConnectionName",
            "type": "string",
            "label": "Target Connection Name",
            "defaultValue": "",
            "required": false
        },{
            "name": "scribeAction",
            "type": "pickList",
            "label": "The type of action to be performed",
            "required": true,
            "properties": {"EditableOptions": "False"},
            "defaultValue": "Test a connection",
            "options": {
                "testConnection": "Test a connection",
                "createSolution": "Create a solution",
                "deleteSolution": "Delete a solution",
                "getConnectionEntities": "Get connection entities from CE"
            }
        }
    ],
    "execution": {
        "Node10": {
            "target": "index.js"
        }
    }
}